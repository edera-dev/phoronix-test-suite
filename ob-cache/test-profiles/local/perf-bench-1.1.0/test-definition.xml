<?xml version="1.0"?>
<!--Phoronix Test Suite v10.8.5-->
<PhoronixTestSuite>
  <TestInformation>
    <Title>perf-bench</Title>
    <AppVersion>6.18.12</AppVersion>
    <Description>This test profile is used for running Linux perf-bench, the benchmark support within the Linux kernel's perf tool.</Description>
    <ResultScale>ops/sec</ResultScale>
    <Proportion>HIB</Proportion>
    <TimesToRun>3</TimesToRun>
  </TestInformation>
  <TestProfile>
    <Version>1.1.0</Version>
    <SupportedPlatforms>Linux</SupportedPlatforms>
    <SoftwareType>Utility</SoftwareType>
    <TestType>OS</TestType>
    <License>Free</License>
    <Status>Verified</Status>
    <ExternalDependencies>build-utilities, openssl-development, bison, flex</ExternalDependencies>
    <EnvironmentSize>207</EnvironmentSize>
    <ProjectURL>https://www.kernel.org/</ProjectURL>
    <RepositoryURL>https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git</RepositoryURL>
    <Maintainer>Michael Larabel</Maintainer>
  </TestProfile>
  <TestSettings>
    <Option>
      <DisplayName>Benchmark</DisplayName>
      <Identifier>benchmark</Identifier>
      <Menu>
        <Entry>
          <Name>Sched Pipe</Name>
          <Value>sched pipe -l 200000</Value>
        </Entry>
        <Entry>
          <Name>Sched seccomp-notify</Name>
          <Value>sched seccomp-notify -l 200000</Value>
        </Entry>
        <Entry>
          <Name>Memcpy 1MB</Name>
          <Value>mem memcpy -l 30000 -s 1MB</Value>
        </Entry>
        <Entry>
          <Name>Memset 1MB</Name>
          <Value>mem memset -l 30000 -s 1MB</Value>
        </Entry>
        <Entry>
          <Name>Syscall Basic</Name>
          <Value>syscall basic -l 4000000</Value>
        </Entry>
        <Entry>
          <Name>Syscall execve</Name>
          <Value>syscall execve -l 3000</Value>
        </Entry>
        <Entry>
          <Name>Syscall Fork</Name>
          <Value>syscall fork -l 8000</Value>
        </Entry>
        <Entry>
          <Name>Futex Hash</Name>
          <Value>futex hash -r 5 -s</Value>
        </Entry>
        <Entry>
          <Name>Futex Lock-Pi</Name>
          <Value>futex lock-pi -r 5 -s</Value>
        </Entry>
        <Entry>
          <Name>Epoll Wait</Name>
          <Value>epoll wait -r 5</Value>
        </Entry>
      </Menu>
    </Option>
  </TestSettings>
</PhoronixTestSuite>
